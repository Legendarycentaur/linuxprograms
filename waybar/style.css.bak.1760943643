@import "../omarchy/current/theme/waybar.css";

* {
  /* background-color: @background; */
  /* color: @foreground; */
  border: none;
  border-radius: 0px;
  font-family: "JetBrainsMono Nerd Font";
  font-size: 12px;
}

.modules-left,
.modules-right {
  padding: 0px;
}

window#waybar {
  background: @background;
  border-bottom: solid hotpink 1.5px;
}

window#waybar.empty #window {
  background: transparent;
  color: transparent;
  transition: 0.1s;
}

mpris.empty {
  background: green;
}

button {
  border: solid rgb(255, 0, 0) 1.5px;
  transition: 0.4s;
}

#workspaces button {
  transition: 0.4s;
  all: initial;
  padding: 0px 11px 0px 7px;
  border: solid rgb(0, 72, 255) 1.5px;
  /* border-radius: 10px; */
  /* transition: 0.4s; */
}
#workspaces button.active {
  border: solid rgb(255, 119, 0) 1.5px;
  /* background: @foreground;
  color: @background;
  border-radius: 20px;
  transition: 0.4s; */
  transition: 0.4s;
}
#workspaces button:hover {
  /* background: alpha(@foreground, 0.3); */
  transition: 0.4s;
  border: solid rgb(238, 255, 0) 1.5px;
  /* border-radius: 6px; */
}
#workspaces button.active:hover {
  /* background: alpha(@foreground, 0.9); */
  /* color: alpha(@background, 0.9); */
  border: solid rgb(00, 255, 0) 1.5px;
  transition: 0.4s;
}
#workspaces button.empty {
  border: solid rgba(0, 0, 0, 0) 1.5px;
  /* opacity: 0.3; */
  /* border-radius: 6px; */
  transition: 0.4s;
}

#workspaces button.empty:hover {
  border: solid rgb(221, 0, 255) 1.5px;
  transition: 0.4s;
  /* opacity: 0.3; */
  /* border-radius: 6px; */
}

