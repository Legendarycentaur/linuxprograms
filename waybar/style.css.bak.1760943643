#bluetooth {
  padding: 0px 9px 0px 8px;
  border: solid rgba(0, 0, 0, 0) 1.5px;
}
#bluetooth:hover {
  border: solid rgb(0, 255, 174) 1.5px;
}

#pulseaudio {
  padding: 0px 12px 0px 6px;
  margin: 0px 0px;
  border: solid rgba(0, 0, 0, 0) 1.5px;
}
#pulseaudio:hover {
  border: solid rgb(217, 0, 255) 1.5px;
}
#cpu {
  padding: 0px 10px 0px 8px;
  margin: 0px 0px;
  border: solid rgba(0, 0, 0, 0) 1.5px;
}
#cpu:hover {
  border: solid rgb(255, 0, 51) 1.5px;
}
#network {
  padding: 0px 10px 0px 6px;
  margin: 0px 0px;
  border: solid rgba(0, 0, 0, 0) 1.5px;
}
#network:hover {
  border: solid rgb(255, 119, 0) 1.5px;
}
#tray-expander {
  padding: 0px 6px 0px 6px;
  margin: 0px 0px;
  border: solid rgba(0, 0, 0, 0) 1.5px;
}
#tray-expander:hover {
  border: solid rgb(234, 255, 0) 1.5px;
}
#clock {
  padding: 0px 6px 0px 6px;
  margin: 0px 0px;
  border: solid rgba(0, 0, 0, 0) 1.5px;
}
#clock:hover {
  border: solid orange 1.5px;
}
#window {
  padding: 0px 6px 0px 6px;
  margin: 0px 0px;
  border: solid rgba(0, 0, 0, 0) 1.5px;
}
#window:hover {
  border: solid rgb(0, 255, 128) 1.5px;
}
#battery {
  padding: 0px 10px 0px 9px;
  margin: 0px 0px;
  border: solid rgba(0, 0, 0, 0) 1.5px;
}
#battery:hover {
  border: solid rgb(255, 0, 0) 1.5px;
}
#custom-omarchy {
  padding: 0px 6px 0px 6px;
  margin: 0px 0px;
  border: solid rgba(0, 0, 0, 0) 1.5px;
}
#custom-omarchy:hover {
  border: solid rgb(255, 174, 0) 1.5px;
}

